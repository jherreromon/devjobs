<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Información General</h3>
        <div class="campo">
            <label>Título</label>
            <input type= "text" name="titulo", placeholder=
            "Ej: React Developer">
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder=
            "Empresa contrata">
        </div>
        <div class="campo">
            <label>ubicacion</label>
            <input type="text" name="ubicacion" placeholder=
            "Ej: España o remoto">
        </div><div class="campo">
            <label>Salario(USD)</label>
            <input type="text" name="salario" placeholder=
            "Ej: 500 USD">
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                   <option value="" disable selected>--Seleciona--</option>
                   <option value="freelance">Freeland</option>
                   <option value="tiempo completo">Tiempo Completo</option>
                   <option value="medio">Medio Tiempo</option>
                   <option value="Por Proyecto">Por Proyecto</option>

            </select>
        </div>
            <h3>Descripción del Puesto</h3>
            <div class="campo descripcion">
                <label>Descripcion</label>
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
            <h3>Conocimientos</h3>

            <ul class="lista-conocimientos">
                <!--viene del fichero ../helpers/handlebars-->
                {{#seleccionarSkills a }}
                {{/seleccionarSkills}}
            </ul>

            <div class="campo centrar-horizontal">
                <input type="hidden" name="skills" id="skills">
                <input type="submit" value="Publicar" class="btn btn-azul">  
            </div>
    </form>
</main>